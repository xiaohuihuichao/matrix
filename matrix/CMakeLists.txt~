CMAKE_MINIMUM_REQUIRED( VERSION 2.5 )



PROJECT( Matrix )




AUX_SOURCE_DIRECTORY( . DIR_SRC )

AUX_SOURCE_DIRECTORY( ./matrix DIR_MATRIX )

INCLUDE_DIRECTORIES( ./matrix )

FILE(GLOB_RECURSE HEADERS *.h)
SOURCE_GROUP("Include" FILES ${HEADERS} ) 

ADD_LIBRARY( 01matrix ${DIR_SRC} ${HEADERS} )
ADD_EXECUTABLE( 00matrix_Main ${DIR_SRC} ${HEADERS} )

ADD_SUBDIRECTORY( module/Ann )
